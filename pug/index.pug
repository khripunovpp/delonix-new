			.header
				.header__main
					.container
						.header__inner
							a(href="").header__logo
								img(src="img/logo.png", alt="")
							.header__top
								p.header__address г. Москва, ул. Смольная, д. 24А, офис 43
									a.header__email(href="") hello@delonix.su
